{{> headerDark}}

<div class="hero">
    {{#with hero}}
        <h1 class="hero_title">{{title}}</h1> 
        <p class="hero_text">{{description}}</p>
        {{#with button}}
            <a class="hero_button" href="{{url}}">{{text}}</a>
        {{/with}}
    {{/with}}
</div>

<div class="about">
    {{#with about}} 
        <h2 class="about_title">{{heading}}</h2>
        <p class="about_info">{{info}}</p>
    {{/with}}
</div>

<div class="main_header">
    <h2 class="main_title">Our articles</h2>   
    <a href="www.google.com" class="view_button">View all</a>
</div>


<main class="main">  
    {{#each articles}}
        <div class="article_card">
            <img src="{{photo}}" alt="Article image" class="card_img">
            <h3 class="card_title">{{name}}</h3>
            <p class="card_text">{{description}}</p>
            <a class="card_button" href="www.google.com">Read me</a>
        </div>
    {{/each}}
</main>

{{> footerDark}}
